# PostgreSQL Database (from Render)
DATABASE_URL=postgresql://user:password@host:5432/database

# How many years of orders to index (default: 3)
ORDER_INDEX_YEARS=3

# Session secret (random string)
SESSION_SECRET=change-this-to-random-string

# Staff login credentials (USER1 is admin, can trigger sync)
USER1_NAME=admin
USER1_PASS=your-password

USER2_NAME=maria
USER2_PASS=maria-password

# Add more users as needed (up to USER10)
# USER3_NAME=john
# USER3_PASS=john-password

# 1ink.com BigCommerce API
BC_1INK_STORE_HASH=your-store-hash
BC_1INK_ACCESS_TOKEN=your-api-token

# needink.com BigCommerce API
BC_NEEDINK_STORE_HASH=your-store-hash
BC_NEEDINK_ACCESS_TOKEN=your-api-token
